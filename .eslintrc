{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": "vtex-react/gatsby",
  "root": true,
  "rules": {
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": [
      "error"
    ],
    "react/prop-types": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      },
      {
        "usePrettierrc": true
      }
    ],
    "react-hooks/exhaustive-deps": "warn"
  },
  "ignorePatterns": [
    "static/~partytown/*"
  ]
}